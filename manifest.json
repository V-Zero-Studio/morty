{
    "manifest_version": 3,
    "name": "MORTY",
    "description": "Mitigating OverReliance on inTelligent sYstems",
    "version": "1.0",
    "action": {
        "default_popup": "morty.html",
        "default_icon": "morty_icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/morty.js"
            ],
            "css": [
                "scripts/morty.css"
            ],
            "matches": [
                "https://chat.openai.com/",
                "https://chat.openai.com/c/*"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "data/config.json", "morty_icon.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}